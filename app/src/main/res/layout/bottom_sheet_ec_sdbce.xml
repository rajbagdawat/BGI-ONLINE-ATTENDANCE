<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">
    <TextView
        android:id="@+id/choosetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Choose"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/layout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"

        >
        <androidx.cardview.widget.CardView
            android:id="@+id/firstyec"
            android:layout_width="319dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/purple_700"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            >

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:text="1st Year EC"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/secondyec"
            android:layout_width="319dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/purple_700"
            app:cardCornerRadius="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            >

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="2nd Year EC"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        tools:ignore="UseCompoundDrawables">
        <androidx.cardview.widget.CardView
            android:id="@+id/thirdyec"
            android:layout_width="319dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/purple_700"
            app:cardCornerRadius="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            >

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="3rd Year EC"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/fourthyec"
            android:layout_width="319dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/purple_700"
            app:cardCornerRadius="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            >

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="4th Year EC"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>