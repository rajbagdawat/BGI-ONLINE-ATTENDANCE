<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Login.Login_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="160dp"
            android:layout_height="136dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/bgi" />

        <androidx.cardview.widget.CardView
                android:layout_width="339dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="30dp"
                >

                <ImageView
                    android:layout_width="610dp"
                    android:layout_height="455dp"
                    android:paddingBottom="182dp"
                    android:paddingRight="90dp"
                    android:src="@color/purple_700"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="Email :"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat"></TextView>

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:hint="Enter Email"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="339dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="30dp"
            >

            <ImageView
                android:layout_width="610dp"
                android:layout_height="455dp"
                android:paddingBottom="182dp"
                android:paddingRight="90dp"
                android:src="@color/purple_700"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="Pass  : "
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat"></TextView>

            <EditText
                android:id="@+id/editTextTextPassword"
                android:ems="10"
               android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="3dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                 />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#2DAC2F"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="Forget Password?"
           android:clickable="true"
            android:textColor="@color/black"
            android:textColorHighlight="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#2DAC2F"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="Sign Up"
           android:clickable="true"
            android:textColor="@color/black"
            android:textColorHighlight="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat"></TextView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="159dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_marginStart="100dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#2DAC2F"
            android:onClick="SubmitDetails"
            app:cardCornerRadius="100dp"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listview"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/submit_button_overall"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="129dp" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</LinearLayout>