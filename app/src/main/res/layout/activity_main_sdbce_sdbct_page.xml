<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id= "@+id/drawer_layer"
    android:background="@color/white"
    tools:context=".Main_sdbce_sdbct_page"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/menu_toolbar" />

        <View
            android:layout_width="420dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="50dp"
            android:background="#AB888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="731dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="339dp"
                android:layout_height="273dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="11dp"
                app:cardCornerRadius="10dp"
                >

                <ImageView
                    android:layout_width="610dp"
                    android:layout_height="455dp"
                    android:onClick="sdbce"
                    android:paddingBottom="182dp"
                    android:paddingRight="90dp"
                    android:src="@drawable/sdbce"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDBCE"
                    android:layout_marginLeft="260dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat"></TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="339dp"
                android:layout_height="273dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"

                >

                <ImageView
                    android:layout_width="610dp"
                    android:layout_height="455dp"
                    android:onClick="sdbct"
                    android:paddingBottom="182dp"
                    android:paddingRight="124dp"
                    android:src="@drawable/sdbct"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDBCT"
                    android:layout_marginLeft="260dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat"></TextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            android:layout_gravity="start"
            android:id="@+id/nav"
            app:headerLayout="@layout/nav_drawer"
            ></com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
