<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Show_records">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
      <LinearLayout
          android:layout_width="55dp"
          android:layout_height="48dp"
          android:orientation="horizontal"
          android:background="@color/white"
          tools:ignore="MissingConstraints">

          <ImageView
              android:layout_width="0dp"
              android:layout_height="55dp"
              android:layout_marginStart="0dp"
              android:layout_weight="2"
              android:onClick="back"
              android:paddingTop="13dp"
              android:paddingBottom="19dp"
              android:src="@drawable/baseline_arrow_back_24"></ImageView>

      </LinearLayout>
        <LinearLayout
          android:layout_width="260dp"
          android:layout_height="48dp"
          android:orientation="horizontal"
          android:background="@color/white"
          tools:ignore="MissingConstraints">
          <TextView
              android:layout_width="250dp"
              android:layout_height="match_parent"
              android:layout_marginLeft="0dp"
              android:layout_marginRight="50dp"
              android:layout_marginStart="0dp"
              android:layout_weight="1"
              android:paddingTop="10dp"
              android:text="Student Records"
              android:textColor="#222222"
              android:textSize="20dp"></TextView>

    </LinearLayout>
        <View
            android:layout_width="425dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="-320dp"
            android:layout_marginTop="48dp"
            android:background="#542C2B2B" />

        <TextView
            android:id="@+id/ComputerScience"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:text=" Computer Science"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

    </LinearLayout>
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="732dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">


    <androidx.cardview.widget.CardView
        android:id="@+id/yearsemdata2"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/border3"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:popupBackground="#FFFFFF"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:textColor="#FFFFFF"
            android:padding="5dip"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/yearsemdata3"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/border3"/>
        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:popupBackground="#FFFFFF"
            />

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/yearsemdata4"
            android:layout_width="339dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginStart="-340dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="115dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="339dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@drawable/border3"/>
            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="339dp"
                android:autofillHints="Select Year"
                android:layout_height="55dp"
                android:layout_marginTop="-6dp"
                android:popupBackground="#F7FFF1"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/yearsemdata5"
            android:layout_width="339dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginStart="-339dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="168dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="339dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@drawable/border3"/>
            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="339dp"
                android:autofillHints="Select Year"
                android:layout_marginTop="-6dp"
                android:layout_height="55dp"
                android:popupBackground="#F7FFF1"
                />
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/view"
            android:layout_width="425dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="-350dp"
            android:layout_marginTop="220dp"
            android:background="#542C2B2B" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Recycleview"
            android:layout_marginTop="225dp"
           android:layout_marginStart="-427dp"
            tools:listitem="@layout/show_records"
            app:layout_constraintBaseline_toBottomOf="@id/viewbar"
            tools:ignore="NotSibling" />
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>