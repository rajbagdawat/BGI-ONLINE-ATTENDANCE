<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FFF1"
    android:orientation="vertical"
    tools:context=".mainSubLayout.Choose_Student_Teacher">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/changeimg"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/student"/>

    <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Welcome to"
             android:textColor="#0E132E"
             android:textSize="31dp"
             android:layout_marginStart="25dp"
             android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="BGI"
             android:textColor="#0E132E"
             android:textSize="30dp"
             android:layout_marginStart="25dp"
             android:textStyle="bold"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/bgi"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Login as a"
            android:layout_marginTop="15dp"
            android:textColor="#BE0E132E"
             android:textSize="18dp"
             android:layout_marginStart="25dp"
             android:textStyle="bold"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/studentbutton"
            android:layout_width="339dp"
            android:layout_height="52dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#050512"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listview"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:text="Student"
                android:defaultFocusHighlightEnabled="true"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="129dp" />

        </androidx.cardview.widget.CardView>
   <androidx.cardview.widget.CardView
            android:id="@+id/teacherbutton"
            android:layout_width="339dp"
            android:layout_height="52dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#050512"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listview"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:text="Teacher"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="129dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>